<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app.Calendar"
             Title="Calendar"
             Appearing="ContentPage_Appearing">

    <Grid RowDefinitions="*" ColumnDefinitions="*">
        <ListView
            Grid.Row="0"
            Grid.Column="0"
            x:Name="listMeetings"
            BackgroundColor="Black"
            SeparatorColor="White"
            RowHeight="70"
            ItemSelected="listMeetings_ItemSelected"
            ItemTapped="listMeetings_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding CircuitShortName}" Detail="{Binding DateStart}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</ContentPage>